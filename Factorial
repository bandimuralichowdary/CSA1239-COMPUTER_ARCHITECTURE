;Factorial
LDA 2000
MOV B,A
MVI C,01
MVI E,01
LOOP: MOV D,C
MVI A,00
LP: ADD E
DCR D
JNZ LP
MOV E,A
INR C
DCR B
JNZ LOOP
MOV A,E
STA 2001
HLT


or


;FACTORIAL 2nd Method
LXI H,2000
MOV B,M
MVI D,01
FACT: CALL MULTIPLY
DCR B
JNZ FACT
INX H
MOV M,D
HLT
MULTIPLY: MOV E,B
MVI A,00
LOOP: ADD D
DCR E
JNZ LOOP
MOV D,A
STA 2001
RET
